<% if current_user %>
    <h1>Welcome, <%= current_user.username %></h1>
    <p>You currently have <%= current_user.songs.count %> songs in your collection. </p>

    <p>The last song you added was <%= link_to current_user.last_song_added.full_title, artist_song_path(current_user.last_song_added.artist, current_user.last_song_added) %></p>
    <p>Switch to Party Mode? </p>
<% else %>
    <p><%= @user.username %>'s Profile Page %> </p>
    <p><%= @user.username %> owns <%= @user.songs.count %> songs.</p> 
    <p>The last song <%= @user.username %> added was <%= @user.last_song_added %></p>
<% end %>

<%= link_to "Return to Song List", songs_path %> <br>
<%= link_to "Begin Party Mode", toggle_party_path %>