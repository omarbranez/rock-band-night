<div class="login-form">
    <%= form_tag('/sessions', method: :post) do %>
    <h2 class="text-center" style="color:rgb(0,0,0);">Sign In</h2>   
    <div class="form-group">
    	<div class="input-group">
            <%= text_field_tag(:username, nil, placeholder: "User Name", class: "form-control", required: "required") %>
        </div>
    </div>
	<div class="form-group">
        <div class="input-group">
        	<%= password_field_tag(:password, nil, placeholder: "Password", class: "form-control", required: "required") %>			
        </div>
    </div>        
    <div class="form-group">
        <%= button_tag("I'm Back!", class: "btn btn-primary login-btn btn-block") %>
    </div>
	<div class="or-seperator"><i>or</i></div>
    	<p class="text-center">Login with Social Media</p>
    	<div class="text-center social-btn">
            <%= link_to '<i class="fa fa-facebook"></i> Facebook'.html_safe, "/auth/facebook", class: "btn btn-primary" %>
            <%= link_to '<i class="fa fa-google"></i> Google'.html_safe, "/auth/google_oauth2", class: "btn btn-danger" %>
    	</div>
    <% end %>
    <%= link_to "Need to Register? Sign up here!", new_user_path %>
</div>